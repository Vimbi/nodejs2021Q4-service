{
  "compilerOptions": {
    "module": "commonjs",
    "types": ["node"],
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./",
    "moduleResolution": "node",
    "esModuleInterop": true,
  },
  "exclude": [
    "node_modules/",
  ],
  "include": [
    "./src/**/*.ts"
  ]
}